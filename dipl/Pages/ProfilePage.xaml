<Page x:Class="dipl.Pages.ProfilePage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dipl.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Background="#FF000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid x:Name="Header">
            <Border>
                <Rectangle x:Name="BlurringShape" Margin="3,3,3,-130">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/dipl;component/Assets/anime.jpg" Stretch="UniformToFill" />
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <BlurEffect KernelType="Gaussian" Radius="3" />
                    </Rectangle.Effect>
                </Rectangle>
                <Border.CacheMode>
                    <BitmapCache />
                </Border.CacheMode>
            </Border>
            <Border Margin="0,0,0,-140">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#E5000000" Offset="0.85"/>
                        <GradientStop Color="#4C000000"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <BlurEffect KernelType="Gaussian" Radius="6" />
                </Border.Effect>
            </Border>
            <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="50"
                       FontSize="50"
                       Text="Profile"
                       FontFamily="Arial Black"
                       Foreground="#d9ebe9"/>
            <Line X1="0" Y1="150" X2="{Binding ActualWidth, ElementName=Header}" Y2="150" Stroke="#d9ebe9" Margin="40,0,40,0"/>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                      Style="{StaticResource MaterialDesignScrollViewer}" Margin="40,0,40,0">
            <StackPanel>
                
                <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="50,50,50,20"
                       FontSize="30"
                       Text="Information"
                       FontFamily="Arial Black"
                       Foreground="#d9ebe9"/>
                <Line X1="0" Y1="0" 
                          X2="{Binding ActualWidth, ElementName=Header}" Y2="0" 
                          Stroke="#d9ebe9" Margin="40,0,40,0"/>
                <StackPanel Margin="50,20,50,20">
                    
                    
                </StackPanel>
                
                    <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="50,50,50,20"
                       FontSize="25"
                       Text="Password"
                       FontFamily="Arial Black"
                       Foreground="#d9ebe9"/>
                <Line X1="0" Y1="0" 
                          X2="{Binding ActualWidth, ElementName=Header}" Y2="0" 
                          Stroke="#d9ebe9" Margin="40,0,40,0"/>
                <StackPanel>
                    <StackPanel Margin="50,20,50,20">
                        <TextBlock Foreground="#d9ebe9" 
                                   Margin="50,50,50,20"
                                   FontSize="20"
                                   FontFamily="Arial Black"
                                   Text="Old password">
                        </TextBlock>
                        <PasswordBox Foreground="#d9ebe9" CaretBrush="#d9ebe9"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 Margin="50,0,50,50"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#d9ebe9"
                                 materialDesign:HintAssist.Foreground="#d9ebe9"
                                 FontSize="20"
                                 materialDesign:HintAssist.Hint="Enter password" 
                                 >
                        </PasswordBox>
                        <TextBlock Foreground="#d9ebe9" 
                                   Margin="50,20,50,20"
                                   FontSize="20"
                                   FontFamily="Arial Black"
                                   Text="New password"
                                   >
                        </TextBlock>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Foreground="#d9ebe9" CaretBrush="#d9ebe9"
                                 Margin="50,0,50,0"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#d9ebe9"
                                 materialDesign:HintAssist.Foreground="#d9ebe9"
                                 FontSize="20"
                                 materialDesign:HintAssist.Hint="Enter password">
                        </TextBox>
                    </StackPanel>
                    <Button Content="Change password" Height="50"
                            Style="{StaticResource MaterialDesignFlatLightBgButton}"
                            Foreground="#d9ebe9" BorderBrush="{x:Null}" Background="#B214210D"
                            Margin="100,20,100,20" FontSize="20">
                    </Button>
                </StackPanel>
                
                    <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="50,50,50,20"
                       FontSize="25"
                       Text="Settings"
                       FontFamily="Arial Black"
                       Foreground="#d9ebe9"/>
                <Line X1="0" Y1="0" 
                          X2="{Binding ActualWidth, ElementName=Header}" Y2="0" 
                          Stroke="#d9ebe9" Margin="40,0,40,0"/>
                <StackPanel Margin="50,20,50,20">
                    
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
